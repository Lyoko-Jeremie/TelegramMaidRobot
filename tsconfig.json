{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ],
  "lb": [
    "es5",
    "es6",
    "es2015",
    "es2016",
    "es2017"
  ],
  "include": [
    "./src/**/*"
  ]
}
